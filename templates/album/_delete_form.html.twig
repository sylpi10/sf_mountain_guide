<form method="post" action="{{ path('album_delete', {'id': album.id}) }}" 
    onsubmit="return confirm('Heeey, veux-tu vraiment supprimer ce magnifique album ??');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.id) }}">
    <button class="btn btn-danger mt-3">{{ button_label|default('Supprimer l\'album') }}</button>
</form>
