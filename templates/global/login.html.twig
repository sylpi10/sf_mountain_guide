{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block pageTitle %}Login{% endblock %}
{% block body %}

    <div class="container bg-light mt-5 p-5">

        
        {% if error %}
        <div class="alert alert-danger">
            {% trans %} Wrong credentials {% endtrans %}
        </div>
        {% endif %}
        
        <form action="{{path('login')}}" method="post">
            <div class="form-group">
                <label for="_username">Name :</label>
                <input type="text" required name="_username" class="form-control" value="{{lastUserName}}">
            </div>
            
            <div class="form-group">
                <label for="_password">{% trans %} Password {% endtrans %} :</label>
                <input type="password" required name="_password" class="form-control">
            </div>
            
            <input type="submit" value="{% trans %} Login {% endtrans %}" class="btn btn-info">
        </form>
    </div>
    {% endblock %}