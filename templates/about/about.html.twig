{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}
	About
	{% endtrans %}
{% endblock %}
{% block description %}
	<meta name="description" content="A propos de votre guide de haute montagne Yoann Georges !">
{% endblock %}
{% block body_class %}base-page
{% endblock %}
{% block body %}

	<main class="main-about">
		<div class="container about-container">
			<div class="about-me">
				<div class="about-text">
					{% for locale in locales %}
						{% if locale == app.request.locale %}
							{% if locale =='fr' %}
								<h1>{{about.whoTitle}}</h1>
								<div>
									{{about.whoText|raw}}
								</div>
							{% endif %}
							{% if locale =='en' %}
								<h1>{{about.whoEnglishTitle}}</h1>
								<div class="">
									{{about.whoEnglishText|raw}}
								</div>
							{% endif %}
						{% endif %}
					{% endfor %}
				</div>
				<div class="about-pic">
					<img src="{{asset('images/about-me.jpg')}}" alt="Photo de guide de montagne en falaise" class="img-fluid shadow" width="500">
					<img src="{{asset('images/about-me3.jpg')}}" alt="Photo de guide de montagne en campement" class="img-fluid shadow" width="500">
				</div>
			</div>

		</div>
	</main>
	<div class="" id="">
		{% include "footer.html.twig" %}</div>
{% endblock %}
