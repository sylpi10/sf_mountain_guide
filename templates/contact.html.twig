<div class="contact-form">
	<h2 class="my-4 contact-title text-center">Contact</h2>

	<div class="contact-infos">
		<p>
			{% trans %}
			Whatever you fancy doing on the mountains, I will quickly reply to your request. So feel free to contact me and get ready for new adventures together !
			{% endtrans %}
			<br>
			{% trans %}
			See you real soon !
			{% endtrans %}
		</p>
		<img src="{{asset('images/profile.jpg')}}" alt="profile image" width="216" height="220">
	</div>


	{{form_start(form)}}
	<label class="control-label" for="">{% trans %}
		Your Name
		{% endtrans %}</label>
	{{form_row(form.name, {'attr':{'placeholder': 'ex:Mike Horn'}})}}

	<input type="text" id="website" name="website"/>

	<label class="control-label" for="">{% trans %}
		Your Email
		{% endtrans %}</label>
	{{form_row(form.email, {'attr':{'placeholder': 'mail@gmail.com'}})}}
	<label class="control-label" for="">{% trans %}
		Your Message
		{% endtrans %}</label>
	{{form_row(form.message)}}
	<input type="submit" value="{% trans %} Send {% endtrans %}" class="btn button-link">
	{{form_end(form)}}

</div>
